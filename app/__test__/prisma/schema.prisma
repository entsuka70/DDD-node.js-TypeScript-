// テストと本番のスキーマが分かれているのが気になりました。（一緒のほうが変更するときに１箇所で済むので楽かな？と）
datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL_TEST")
}

generator client {
    provider        = "prisma-client-js"
    previewFeatures = ["selectRelationCount"]
}

model User {
    id         String   @id @default(uuid())
    pair_id    String
    team_id    String
    user_name  String
    email      String   @unique
    status     Int /// 1:在籍中, 2:休会中, 3:退会済み
    created_at DateTime @default(now())
    updated_at DateTime @updatedAt

    userIssue UserIssue[]
    pair      Pair        @relation(fields: [pair_id], references: [id])
    team      Team        @relation(fields: [team_id], references: [id])
}

model UserIssue {
    id         String   @id @default(uuid())
    user_id    String
    issue_id   String
    progress   Int /// 1:未着手, 2:レビュー待ち, 3:完了
    created_at DateTime @default(now())
    updated_at DateTime @updatedAt

    user  User  @relation(fields: [user_id], references: [id])
    issue Issue @relation(fields: [issue_id], references: [id])
}

model Issue {
    id          String   @id @default(uuid())
    issue_name  String
    issue_group Int /// 1:未分類 2:WEBの基礎, 3:テスト, 4:DB, 5:設計
    created_at  DateTime @default(now())
    updated_at  DateTime @updatedAt

    userIssue UserIssue[]
}

model Pair {
    id         String   @id @default(uuid())
    pair_name  String   @unique
    belong     Boolean /// true: User所属, false: User無所属
    team_id    String
    created_at DateTime @default(now())
    updated_at DateTime @updatedAt

    user User[]
    team Team   @relation(fields: [team_id], references: [id])
}

model Team {
    id         String   @id @default(uuid())
    team_name  Int      @unique
    belong     Boolean /// true: Pair所属 false: Pair無所属
    created_at DateTime @default(now())
    updated_at DateTime @updatedAt

    pair Pair[]
    user User[]
}
